<div class="d-flex flex-column p-2 border rounded-2">
  <header class="d-flex p-2 justify-content-between">
    <img src="avatar.png" alt="generic avatar icon" width="30" height="30"/>
    <span>@PostedBy</span>
    <span>@PostedAt</span>
  </header>
  <div class="p-2">
    @ChildContent
  </div>
</div>

@code {
  
  [Parameter]
  public string PostedBy { get; set; }
  
  [Parameter]
  public DateTime PostedAt { get; set; }
	
  [Parameter]
  public RenderFragment ChildContent { get; set; }
  
  // just need a generic image to have something show up!
  string avatarUrl = "https://cloud.squidex.io/api/assets/practicalblazorcomponents-dev/7120e294-ece0-4763-8b3c-df39bb007b0f/avatar.png";

}