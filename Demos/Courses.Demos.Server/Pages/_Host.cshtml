@page "/"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Request.Query.TryGetValue("wasm", out var wasmMode );
    bool wasm = wasmMode == "True";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
    <title>Courses.Demos</title>
    <base href="/"/>
    <link href="css/bootstrap/bootstrap.min.css" rel="stylesheet"/>
    <link href="css/app.css" rel="stylesheet"/>
    <link rel="icon" type="image/png" href="favicon.png"/>
    <link href="Courses.Demos.styles.css" rel="stylesheet"/>
</head>
<body>

@if (wasm)
{
    <component type="typeof(Courses.Demos.App)" render-mode="WebAssembly"/>
    <script src="_framework/blazor.webassembly.js"></script>
}
else
{
    <component type="typeof(Courses.Demos.Server.App)" render-mode="Server"/>
    <script src="_framework/blazor.server.js"></script>
}

</body>
</html>